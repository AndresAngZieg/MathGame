<Window x:Class="___MathGame2___.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Juego" Height="600" Width="700" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Contador de preguntas -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="0" Margin="0,10">
            <TextBlock Text="Pregunta: " FontSize="20" Foreground="White"/>
            <TextBlock x:Name="txtQuestionNumber" Text="0/10" FontSize="20" Foreground="White"/>
            <TextBlock Text=" | Correctas: " FontSize="20" Foreground="White" Margin="20,0,0,0"/>
            <TextBlock x:Name="txtCorrect" Text="0" FontSize="20" Foreground="White"/>
            <TextBlock Text=" | Incorrectas: " FontSize="20" Foreground="White" Margin="20,0,0,0"/>
            <TextBlock x:Name="txtIncorrect" Text="0" FontSize="20" Foreground="White"/>
        </StackPanel>

        <!-- Operación -->
        <TextBlock x:Name="txtOperation" Text="0 + 0" FontSize="40" FontWeight="Bold" Foreground="White"
                   HorizontalAlignment="Center" Grid.Row="1" Margin="0,30"/>

        <!-- Respuesta del usuario -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2" Margin="0,20">
            <TextBox x:Name="txtAnswer" Width="200" Height="50" FontSize="24" Margin="0,0,20,0"/>
            <Button Content="Comprobar" Width="150" Height="50" FontSize="16" Background="#FF4CAF50" Foreground="White"
                    Click="btnCheck_Click"/>
        </StackPanel>

        <!-- Estrellas -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="3" Margin="0,20">
            <ItemsControl x:Name="icStars">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="★" FontSize="24" Foreground="Gold" Margin="2"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Grid>
</Window>
