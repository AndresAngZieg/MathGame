<Window x:Class="__WPFMathGame__.GameWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Game" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Window.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFB3E5FC" Offset="0.0"/>
            <GradientStop Color="#FF64B5F6" Offset="1.0"/>
        </LinearGradientBrush>
    </Window.Background>

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="operationDisplay" FontSize="28" FontWeight="Bold" Foreground="DarkBlue" 
                       TextAlignment="Center" Margin="0,0,0,10"/>

            <TextBox x:Name="answerInput" Width="200" FontSize="18" HorizontalAlignment="Center" Margin="0,0,0,10"/>

            <Button x:Name="submitButton" Content="Enviar Respuesta" Click="SubmitButton_Click"
                    Width="160" Height="40" Background="#FF42A5F5" Foreground="White" FontSize="16"
                    Cursor="Hand" BorderThickness="0" Margin="0,0,0,10">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="Background" Value="#FF42A5F5"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="FontSize" Value="16"/>
                        <Setter Property="Width" Value="160"/>
                        <Setter Property="Height" Value="40"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Setter Property="BorderThickness" Value="0"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#FF1E88E5"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>

            <TextBlock x:Name="feedbackDisplay" FontSize="18" FontWeight="Bold" Foreground="DarkGreen" 
                       TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="timerDisplay" FontSize="18" FontWeight="Bold" Foreground="DarkRed" 
                       TextAlignment="Center" Margin="0,0,0,10"/>
            <TextBlock x:Name="scoreLabel" FontSize="20" FontWeight="Bold" Foreground="Black" 
                       TextAlignment="Center"/>
            <TextBlock x:Name="scoreDisplay" FontSize="1" FontWeight="Bold" Foreground="Black" Height="161" Width="689" Visibility="Collapsed"/>
            <TextBlock x:Name="remainingDisplay" FontSize="18" FontWeight="Bold" Foreground="Purple" TextAlignment="Center" Margin="0,0,0,10"/>
        </StackPanel>
    </Grid>
</Window>