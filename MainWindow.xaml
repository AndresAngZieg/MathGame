<Window x:Class="__WPFMathGame__.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:__WPFMathGame__"
        mc:Ignorable="d"
        Title="Math Game" Width="450" Height="600" Background="#FFFFFF" WindowStartupLocation="CenterScreen">

    <Grid Margin="0,0,0,-16">
        <Grid.RowDefinitions>
            <RowDefinition Height="149*"/>
            <RowDefinition Height="101*"/>
        </Grid.RowDefinitions>
        <Border Padding="20" MaxWidth="400" CornerRadius="10" HorizontalAlignment="Center" VerticalAlignment="Top" Grid.RowSpan="2">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <TextBlock Text="Selecciona las operaciones:" FontSize="18" FontWeight="Bold" Foreground="#2E3B4E" Margin="0 10 0 5" Grid.Row="0"/>

                <Border Background="#F0F0F0" Padding="10" CornerRadius="5" Grid.Row="1">
                    <StackPanel>
                        <CheckBox x:Name="checkAdd" Content="+" IsChecked="True" FontSize="16" Margin="5"/>
                        <CheckBox x:Name="checkSubtract" Content="-" FontSize="16" Margin="5"/>
                        <CheckBox x:Name="checkMultiply" Content="*" FontSize="16" Margin="5"/>
                        <CheckBox x:Name="checkDivide" Content="/" FontSize="16" Margin="5"/>
                        <CheckBox x:Name="checkSqrt" Content="Raíces" FontSize="16" Margin="5"/>
                        <CheckBox x:Name="checkPower" Content="Potencias" FontSize="16" Margin="5"/>
                    </StackPanel>
                </Border>

                <Button Content="Iniciar Juego" Click="StartGame_Click" FontSize="18" FontWeight="Bold" Background="#4CAF50" Foreground="White" Padding="10" Cursor="Hand" Grid.Row="2" Margin="10 10 0 10" HorizontalAlignment="Center"/>

                <TextBlock Text="Mejores Puntuaciones" FontSize="20" FontWeight="Bold" Foreground="#2E3B4E" Margin="15 10 0 10" Grid.Row="3"/>
                <ListBox x:Name="scoreList" Height="150" Margin="0 5 0 10" Background="#F8F8F8" BorderBrush="#2E3B4E" BorderThickness="1" Grid.Row="4"/>
            </Grid>
        </Border>
    </Grid>
</Window>
