<Window x:Class="___MathGame2___.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Math Game" Height="800" Width="700" WindowStartupLocation="CenterScreen"
        Background="#FF1E1E2F"
        Activated="Window_Activated">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Título -->
        <TextBlock Text="Juego de Matemáticas"
                   FontSize="36"
                   FontWeight="Bold"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   Margin="0,10"/>
        <!-- Contador de estrellas -->
        <TextBlock x:Name="txtStars"
                   Text="⭐ Estrellas: 0"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="Gold"
                   HorizontalAlignment="Right"
                   Margin="0.40"/>

        <!-- Lista de operaciones -->
        <GroupBox Header="Selecciona las operaciones" 
                  FontSize="18" Foreground="White" Grid.Row="1" Margin="0,20,0,10">
            <ListBox x:Name="lstOperations" SelectionMode="Multiple" Background="#FF2E2E3F" Foreground="White" BorderThickness="0">
                <ListBoxItem Content="Suma (+)" />
                <ListBoxItem Content="Resta (-)" />
                <ListBoxItem Content="Multiplicación (×)" />
                <ListBoxItem Content="División (÷)" />
                <ListBoxItem Content="Potencias" />
                <ListBoxItem Content="Raíces" />
            </ListBox>
        </GroupBox>

        <!-- Tabla de puntuaciones -->
        <GroupBox Header="Puntuaciones" FontSize="18" Foreground="White" Grid.Row="2" Margin="0,10,0,10">
            <DataGrid x:Name="dgScores" AutoGenerateColumns="False" CanUserAddRows="False"
              Background="#FF2E2E3F" GridLinesVisibility="None"
              HeadersVisibility="Column" RowHeight="30" BorderThickness="0">
                <DataGrid.Columns>
                    <!-- Columna Jugador -->
                    <DataGridTextColumn Header="Jugador" Binding="{Binding Player}" Width="*">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Red"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Columna Puntaje -->
                    <DataGridTextColumn Header="Puntuación" Binding="{Binding Score}" Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="Orange"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>

                    <!-- Columna Estrellas -->
                    <DataGridTextColumn Header="Estrellas" Binding="{Binding Stars}" Width="Auto">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="Foreground" Value="DarkOrange"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </GroupBox>

        <!-- Botones -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
            <Button x:Name="btnStart" Content="Iniciar Juego" Width="180" Height="50" FontSize="16"
                    Background="#FF4CAF50" Foreground="White" Margin="10" Click="btnStart_Click"/>
            <Button x:Name="btnSettings" Content="Tienda" Width="180" Height="50" FontSize="16"
                    Background="#FF2196F3" Foreground="White" Margin="10" Click="btnSettings_Click"/>
        </StackPanel>
    </Grid>
</Window>