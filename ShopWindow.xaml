<Window x:Class="___MathGame2___.ShopWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Tienda de Fondos" Height="400" Width="400"
        WindowStartupLocation="CenterOwner"
        Background="#FF1E1E2F">

    <StackPanel Margin="20">
        <TextBlock x:Name="txtStarsShop"
                   Text="⭐ Estrellas: 0"
                   FontSize="18"
                   FontWeight="Bold"
                   Foreground="Gold"
                   HorizontalAlignment="Right"
                   Margin="0,0,0,20"/>

        <Button x:Name="BtnBlue"
                Content="Comprar/Usar Fondo Azul (10⭐)"
                Click="BtnBlue_Click"
                Margin="5"/>
        <Button x:Name="BtnGreen"
                Content="Comprar/Usar Fondo Verde (10⭐)"
                Click="BtnGreen_Click"
                Margin="5"/>
        <Button x:Name="BtnRed"
                Content="Comprar/Usar Fondo Rojo (10⭐)"
                Click="BtnRed_Click"
                Margin="5"/>
        <Button x:Name="BtnPurple"
                Content="Comprar/Usar Fondo Morado (15⭐)"
                Click="BtnPurple_Click"
                Margin="5"/>
        <Button x:Name="BtnYellow"
                Content="Comprar/Usar Fondo Amarillo (15⭐)"
                Click="BtnYellow_Click"
                Margin="5"/>
    </StackPanel>
</Window>
